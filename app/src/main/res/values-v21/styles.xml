<?xml version="1.0" encoding="utf-8"?>
<resources>
 <style name="AppTheme" parent="AppTheme.Base">

    <item name="android:colorPrimary">@color/colorPrimary</item>
    <item name="android:colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="android:colorAccent">@color/colorAccent</item>
    <item name="android:navigationBarColor">@color/navigationBarColor</item>
</style>

    <style name="AppTheme.NoActionBar" parent="AppTheme.Base">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="ToolBarStyle" parent="AppTheme.Base">
        <item name="android:textColorPrimary">@color/White</item> <!--title color -->
        <item name="android:textColorSecondary">@color/White</item> <!-- subtitle color-->
        <item name="android:textColor">@color/Black</item> <!-- menu item text color -->
     </style>
</resources>