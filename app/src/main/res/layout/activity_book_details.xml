<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00BBFF"
    android:id="@+id/rlBookDetails"
    tools:context="in.naushad.androidtutorial.book_details">

    <fragment
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:name="in.naushad.androidtutorial.fragmentBookDetails1"
        android:id="@+id/fBookDetails1"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="10dp"/>
    <fragment
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:name="in.naushad.androidtutorial.fragmentBookDetails2"
        android:id="@+id/fBookDetails2"
        android:layout_below="@id/fBookDetails1" />

</RelativeLayout>
